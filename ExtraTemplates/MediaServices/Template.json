{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "mediaAccount": {
      "type": "object"
    },
    "storageAccounts": {
      "type": "array"
    }
  },
  "variables": {
    "mediaApiVersion": "2021-05-01",
    "storageApiVersion": "2021-04-01"
  },
  "functions": [
  ],
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('storageAccounts')[copyIndex()].name]",
      "apiVersion": "[variables('storageApiVersion')]",
      "location": "[resourceGroup().location]",
      "kind": "[parameters('storageAccounts')[copyIndex()].type]",
      "sku": {
        "name": "[parameters('storageAccounts')[copyIndex()].replication]"
      },
      "properties": {
      },
      "copy": {
        "name": "storageAccounts",
        "count": "[length(parameters('storageAccounts'))]"
      }
    },
    {
      "type": "Microsoft.Media/mediaServices",
      "name": "[parameters('mediaAccount').name]",
      "apiVersion": "[variables('mediaApiVersion')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "storageAccounts"
      ],
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "copy": [
          {
            "name": "storageAccounts",
            "count": "[length(parameters('storageAccounts'))]",
            "input": {
              "id": "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccounts')[copyIndex('storageAccounts')].name)]",
              "type": "[if(equals(copyIndex('storageAccounts'), 0), 'Primary', 'Secondary')]"
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "mediaAccountId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Media/mediaServices', parameters('mediaAccount').name), variables('mediaApiVersion')).mediaServiceId]"
    }
  }
}
